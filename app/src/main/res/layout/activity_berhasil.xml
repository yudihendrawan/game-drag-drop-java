<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Selamat! Anda berhasil menyusun tahapan memasak Indomie dengan benar!"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_gravity="center"
        android:layout_marginBottom="16dp" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:scaleType="centerCrop"
        android:layout_gravity="center"
        android:layout_marginBottom="16dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">

        <Button
            android:id="@+id/btnBukaKamera"
            android:layout_width="0dp"
            android:layout_height="45dp"
            android:layout_weight="1"
            android:drawableTop="@drawable/ic_camera"
            android:text="Buka Kamera"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            style="?android:attr/buttonGravity" />

        <Button
            android:id="@+id/btnShare"
            android:layout_width="0dp"
            android:layout_height="45dp"
            android:layout_weight="1"
            android:drawableTop="@drawable/ic_share"
            android:text="Bagikan Gambar"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            style="?android:attr/buttonGravity" />

        <Button
            android:id="@+id/btnKembali"
            android:layout_width="0dp"
            android:layout_height="45dp"
            android:layout_weight="1"
            android:drawableTop="@drawable/ic_back"
            android:text="Kembali ke Menu Utama"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            style="?android:attr/buttonGravity" />

    </LinearLayout>

</LinearLayout>
